$gutter = 14px

$margin-micro = ($gutter / 3)
$margin-tiny = ($gutter / 2)
$margin-small = ($gutter)
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-large = 24px
$font-size-mid = 18px
$font-size-basic = 14px
$font-size-small = 12px
$font-size-tiny = 8px

grid-maker(96%, $gutter, s)

space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

font-sizes($font-size-basic, false, $font-size-large, $font-size-mid, $font-size-small, $font-size-tiny)

$header-height = 234px

html, body
  scroll-behavior: smooth

#header
  position: absolute
  top: 20px
  left: 15vw
  width: 80vw

#language-switch
  position: absolute
  width: 110px
  height: 30px
  right: 5vw
  top: 0
  border: 1px solid white
  text-align: center
  border-top: none
  z-index: 100
  a
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    padding: $margin-tiny

.nav-item
  cursor: pointer
  user-select: none

#logo
  width: 280px
  height: 154px
  path
    fill: $color-white

#nav
  position: fixed
  width:100vh
  padding-top: 5vw
  transform-origin: left top
  transform: rotate(-90deg) translateX(-100%);
  .grid-row
    justify-content: space-between
    flex-direction: row-reverse
    width: 70%
    min-width: 300px
    margin: 0 auto

#main-content
  position: absolute
  top: 0
  left: 15vw
  width: 80vw
  max-width: 360px

#prize,
#not-found
  padding-top: $header-height

h2 p
  margin-bottom: 0

ul
  list-style-type: square
  li
    margin-bottom: 1em
